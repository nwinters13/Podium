<Window x:Class="WpfApplication2.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="HomeWindow" Height="350" Width="525" Background="#FF8D8D8D">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Width="525" Height="350">
            <Label x:Name="label" Content="Welcome!" HorizontalAlignment="Left" Height="36.082" Margin="10,10,0,0" VerticalAlignment="Top" Width="195.995" Foreground="Black"/>
            <Button x:Name="button_startinterview" Content="Start Interview" HorizontalAlignment="Right" Margin="0,90,72,90" Width="182" Click="button_startinterview_Click" Foreground="Black">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.9,1" StartPoint="0.9,0">
                        <GradientStop Color="#6FCCDD" Offset="0"/>
                        <GradientStop Color="DarkBlue" Offset="5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="button_options" Content="Options" HorizontalAlignment="Left" Height="75" Margin="86,90,0,0" VerticalAlignment="Top" Width="121" Foreground="Black" Click="button_options_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.9,1" StartPoint="0.9,0">
                        <GradientStop Color="#6FCCDD" Offset="0"/>
                        <GradientStop Color="DarkBlue" Offset="5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="button_history" Content="History" HorizontalAlignment="Left" Height="74" Margin="86,0,0,90" VerticalAlignment="Bottom" Width="121" Foreground="Black" Click="button_history_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.9,1" StartPoint="0.9,0">
                        <GradientStop Color="#6FCCDD" Offset="0"/>
                        <GradientStop Color="DarkBlue" Offset="5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Image x:Name="image" Source="Images/PodiumIcon.png" Height="36" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="96"/>
        </Grid>
    </Viewbox>
</Window>
